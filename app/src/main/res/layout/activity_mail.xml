<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="#F0F8FF"
    tools:context="kr.go.seoul.apiair.mail.MailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thx for your feedback"
        android:textSize="30dp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
        android:drawablePadding="10dip"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받는 사람"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="tpals24@gmail.com(관리자)"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:text="데이 데이트 불편/문의 사항"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의내용"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:hint="의견을 작성해주세요.">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorPrimary"
        android:text="메일 보내기"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>
